@using TDEECalc.ViewModels
@using TDEECalc.Controllers
@model AddLoserViewModel

@if (HomeController.loserList.Count > 0)
{

    <h1>Enter your information</h1>
    <div class="makeColumn">
        <form method="post" asp-controller="Home" asp-action="Index">
            <div>
                <label asp-for="Age">Age</label>
                <input asp-for="Age" type="number" value="@HomeController.newLoser.Age" required oninvalid="this.setCustomValidity('Please enter your age')" />
            </div>
            <div class="form-group">
                <label asp-for="Sex">Sex</label>
                <select asp-for="Sex" asp-items="Model.SexTypes"></select>
            </div>
            <div class="form-group">
                <label asp-for="Height">Height</label>
                <input asp-for="Height" value="@HomeController.newLoser.Height" type="text" />
            </div>
            <div class="form-group">
                <label asp-for="StartingWeight">Starting Weight</label>
                <input asp-for="StartingWeight" value="@HomeController.newLoser.StartingWeight" type="text" />
            </div>
            <div class="form-group">
                <label asp-for="CurrentWeight">Current Weight</label>
                <input asp-for="CurrentWeight" value="@HomeController.newLoser.CurrentWeight" type="text" />
            </div>
            <div class="form-group">
                <label asp-for="TargetWeight">Target Weight</label>
                <input asp-for="TargetWeight" value="@HomeController.newLoser.TargetWeight" type="text" />
            </div>
            <div class="form-group">
                <label asp-for="ActivityLevel">Activity Level</label>
                <select asp-for="ActivityLevel" asp-items="Model.ActivityTypes"></select>
            </div>

            <input type="submit" value="Submit" />
        </form>
    </div>

}
